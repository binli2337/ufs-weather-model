##############################################
#####  UFS Run-Time Configuration File  #####
##############################################

# ESMF #
logKindFlag:            ESMF_LOGKIND_MULTI_ON
globalResourceControl:  false

# EARTH #
EARTH_component_list: MED ATM DAT OCN
EARTH_attributes::
  Verbosity = 0
::

# MED #
MED_model:                      @[med_model]
MED_petlist_bounds:             @[med_petlist_bounds]
MED_omp_num_threads:
MED_attributes::
  Verbosity = 0
  Diagnostic = 0
  ATM_model = @[atm_model]
  DAT_model = datm
  OCN_model = @[ocn_model]
  MED_model = cmeps
  history_n = 3
  history_option = nhours
  history_ymd = -999
  coupling_mode = hafs_mom6
  normalization = none
::

# ATM #
ATM_model:                      @[atm_model]
ATM_petlist_bounds:             @[atm_petlist_bounds]
ATM_omp_num_threads:
ATM_attributes::
  Verbosity = 0
  Diagnostic = 0
  mesh_atm = unset
  stop_n = @[FHMAX]
  stop_option = nhours
  stop_ymd = -999
  write_restart_at_endofrun = .true.
::

DAT_model:                     datm
DAT_petlist_bounds:            @[med_petlist_bounds]
DAT_omp_num_threads:
DAT_attributes::
  Verbosity = 0
  DumpFields = false
  mesh_atm = DATM_INPUT/hafs_gfs_mesh.nc
  diro = "."
  logfile = atm.log
  stop_n = @[FHMAX]
  stop_option = nhours
  stop_ymd = -999
::
  
# OCN #
OCN_model:                      @[ocn_model]
OCN_petlist_bounds:             @[ocn_petlist_bounds]
OCN_omp_num_threads:
OCN_attributes::
  Verbosity = 0
  Diagnostic = 0
  merge_import = .false.
  skip_first_import = .true.
  mesh_ocn = hafs_mom6_mesh.nc
  history_n = 1
  history_option = nhours
::

# Run Sequence #
runSeq::
@@[coupling_interval_sec]
  MED med_phases_prep_atm
  MED med_phases_prep_ocn_accum
  MED med_phases_prep_ocn_avg
  MED -> ATM :remapMethod=redist
  MED -> OCN :remapMethod=redist
  ATM
  DAT
  OCN
  ATM -> MED :remapMethod=redist
  DAT -> MED :remapMethod=redist
  OCN -> MED :remapMethod=redist
  MED med_phases_post_atm
  MED med_phases_post_dat
  MED med_phases_history_write
  MED med_phases_restart_write
@
::

# Other Attributes #
DRIVER_attributes::
::

ALLCOMP_attributes::
  ATM_model = fv3
  DAT_model = datm
  OCN_model = mom6
  MED_model = cmeps
  ScalarFieldCount = 3
  ScalarFieldIdxGridNX = 1
  ScalarFieldIdxGridNY = 2
  ScalarFieldIdxNextSwCday = 3
  ScalarFieldName = cpl_scalars
  start_type = startup
  case_name = ufs.hafs
  restart_n = 3
  restart_option = nhours
  restart_ymd = -999
  use_mommesh = true
  eps_imesh = 2.5e-1
  dbug_flag = 0
  use_coldstart = true
  coldair_outbreak_mod = .false.
  flds_wiso = .false.
  orb_eccen = 1.e36
  orb_iyear = 2000
  orb_iyear_align = 2000
  orb_mode = fixed_year
  orb_mvelp = 1.e36
  orb_obliq = 1.e36
  mediator_present = true
  mediator_read_restart = false
  stop_n = @[FHMAX]
  stop_option = nhours
  stop_ymd = -999
::
